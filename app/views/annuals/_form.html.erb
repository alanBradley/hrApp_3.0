<%= form_for([@profile, @annual]) do |f| %>
  <% if @annual.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@annual.errors.count, "error") 
	%> prohibited this annual from being saved:</h2>

      <ul>
      <% @annual.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  	<p>
    <%= f.label :date %><br />
    <%= f.date_field :date %>
    </p>
   	<p>
    <%= f.label :annualType %><br />
    <%= f.text_field :annualType %>
    </p>
    
    <!-- Only Admin level can see Approval check box -->
    <% if current_user.admin? %>
    <p>
    <%= f.label :approval %><br />
    <%= f.check_box :approval %>
    </p>
    <% end %>
  
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>