<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @profile.avatar.url(:medium) %>
</p>

<p>
  <strong>Firstname:</strong>
  <%= @profile.firstname %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @profile.lastname %>
</p>

<p>
  <strong>Email:</strong>
  <%= @profile.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @profile.phone %>
</p>

<p>
  <strong>Department:</strong>
  <%= @profile.department %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user_id %>
</p>

<!-- Display the annuals of a profile -->
<h2>Employee's annual leave requests</h2>
<% @profile.annuals.each do |annual| %>
<p>
<b>Annual leave request details:</b>
<%= annual.annualType %>
</p>
<% end %>
<%= link_to 'Show annuals', profile_annuals_path(@profile) %>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
